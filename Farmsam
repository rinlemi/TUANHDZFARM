-- ğŸ¤– Auto Sam (3p 1 láº§n)
local autoSam = false
local btnAuto = createButton(
	'BtnAutoSam',
	'ğŸ¤– Auto Sam (OFF)',
	Color3.fromRGB(80, 150, 250),
	0.6
)
btnAuto.MouseButton1Click:Connect(function()
	autoSam = not autoSam
	btnAuto.Text = autoSam and 'ğŸ¤– Auto Sam (ON)' or 'ğŸ¤– Auto Sam (OFF)'
	if autoSam then
		task.spawn(function()
			while autoSam do
				rs:WaitForChild('Connections')
					:WaitForChild('Claim_Sam')
					:FireServer('Claim1')
				task.wait(180) -- 3 phÃºt
			end
		end)
	end
end)

-- â³ Äáº¿m 25 phÃºt
local btnTimer = createButton(
	'BtnTimer',
	'â³ Báº¯t Ä‘áº§u 25p',
	Color3.fromRGB(255, 170, 0),
	0.75
)
btnTimer.MouseButton1Click:Connect(function()
	btnTimer.Text = 'â³ Äang cháº¡y...'
	task.spawn(function()
		for i = 25 * 60, 1, -1 do
			btnTimer.Text = 'â³ '
				.. math.floor(i / 60)
				.. 'p '
				.. (i % 60)
				.. 's'
			task.wait(1)
		end
		btnTimer.Text = 'â³ Háº¿t 25p!'
	end)
end)

-- ğŸŸ§ Táº¡o Platform
createButton(
	'BtnPlatform',
	'ğŸŸ§ Táº¡o Platform',
	Color3.fromRGB(255, 140, 0),
	0.9
).MouseButton1Click:Connect(function()
	local pos = Vector3.new(-1232.842, 2014.000, -1281.932)
	local pad = Instance.new('Part')
	pad.Name = 'TUANHDZVCL_Platform'
	pad.Size = Vector3.new(50, 2, 50)
	pad.Anchored = true
	pad.CanCollide = true
	pad.Material = Enum.Material.SmoothPlastic
	pad.Color = Color3.fromRGB(255, 170, 0)
	pad.CFrame = CFrame.new(pos)
	pad.Parent = workspace
end)
