local player = game.Players.LocalPlayer
local rs = game:GetService('ReplicatedStorage')

-- ğŸ“Œ Táº¡o GUI chÃ­nh
local gui = player.PlayerGui:FindFirstChild('TeleportGui')
if not gui then
	gui = Instance.new('ScreenGui')
	gui.Name = 'TeleportGui'
	gui.ResetOnSpawn = false
	gui.Parent = player:WaitForChild('PlayerGui')
end

-- ğŸ“Œ Frame
local frame = gui:FindFirstChild('Frame')
if not frame then
	frame = Instance.new('Frame')
	frame.Size = UDim2.new(0, 250, 0, 320)
	frame.Position = UDim2.new(0.3, 0, 0.3, 0)
	frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	frame.BorderSizePixel = 0
	frame.Active = true
	frame.Draggable = true
	frame.Parent = gui

	local corner = Instance.new('UICorner')
	corner.CornerRadius = UDim.new(0, 12)
	corner.Parent = frame

	-- TiÃªu Ä‘á»
	local title = Instance.new('TextLabel')
	title.Size = UDim2.new(1, 0, 0, 30)
	title.BackgroundTransparency = 1
	title.Text = 'TUANH FARM SAM GOI = CU'
	title.Font = Enum.Font.GothamBold
	title.TextSize = 16
	title.TextColor3 = Color3.fromRGB(255, 255, 255)
	title.Parent = frame
end

-- ğŸ“Œ HÃ m táº¡o nÃºt
local function createButton(name, text, color, posY)
	local btn = frame:FindFirstChild(name)
	if not btn then
		btn = Instance.new('TextButton')
		btn.Name = name
		btn.Size = UDim2.new(0.9, 0, 0, 30)
		btn.Position = UDim2.new(0.05, 0, posY, 0)
		btn.BackgroundColor3 = color
		btn.Text = text
		btn.TextColor3 = Color3.fromRGB(255, 255, 255)
		btn.Font = Enum.Font.GothamBold
		btn.TextSize = 14
		btn.Parent = frame

		local corner = Instance.new('UICorner')
		corner.CornerRadius = UDim.new(0, 8)
		corner.Parent = btn
	end
	return btn
end

-- ================== NÃšT CHÃNH ==================
-- ğŸ  Vá» Sam
createButton('BtnSam', 'ğŸ  Vá» Sam', Color3.fromRGB(50, 200, 50), 0.15).MouseButton1Click:Connect(
	function()
		player.Character:MoveTo(Vector3.new(-1232.842, 214.000, -1281.932))
	end
)

-- ğŸ›¡ï¸ Trá»‘n
